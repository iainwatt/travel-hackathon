.container.tree-form
  %h1 Add A Tree Worth Seeing
= form_for @tree, :html => {:class => "form-horizontal tree-form"} do |f|
  %p
    .field
      = f.label :name
      %br
      = f.text_field :name, :class => 'tree-name'  
  %p
    .field
      = f.label :species
      %br
      = f.text_field :species, :class => 'tree-species'
  %p
    .field
      = f.label :description
      %br
      = f.text_field :description, :class => 'tree-description'
  %p
    .field
      = f.label :address
      %br
      = f.text_field :address, :class => 'tree-address'
  %p
    .field
      = f.label :height
      %br
      = f.text_field :height, :class => 'tree-height'
  %p
    .field
      = f.label :girth
      %br
      = f.text_field :girth, :class => 'tree-girth'
